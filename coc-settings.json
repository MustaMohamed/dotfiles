{
	"eslint.autoFixOnSave": true,
	"eslint.alwaysShowStatus": true,
	  "languageserver": {
		    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
	"go.goplsOptions": {"completeUnimported": true}
}
